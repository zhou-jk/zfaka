<%- include('../layouts/main', { body: `

<!-- 首页轮播/横幅区域 -->
<div class="hero-section">
  <div class="container text-center">
    <h1 class="mb-3">自动发卡平台</h1>
    <p class="lead mb-4">安全、快捷、自动发货，24小时无人值守</p>
    <form action="/" method="GET" class="d-flex justify-content-center">
      <div class="input-group" style="max-width: 500px;">
        <input type="text" name="keyword" class="form-control form-control-lg" 
               placeholder="搜索商品..." value="${keyword || ''}">
        <button class="btn btn-light" type="submit">
          <i class="bi bi-search"></i>
        </button>
      </div>
    </form>
  </div>
</div>

<div class="container mb-5">
  <div class="row">
    <!-- 侧边分类 -->
    <div class="col-lg-3 mb-4">
      <div class="card">
        <div class="card-header bg-white">
          <h5 class="mb-0"><i class="bi bi-grid me-2"></i>商品分类</h5>
        </div>
        <div class="list-group list-group-flush">
          <a href="/" class="list-group-item list-group-item-action ${!currentCategory ? 'active' : ''}">
            <i class="bi bi-collection me-2"></i>全部商品
          </a>
          ${categories.map(cat => `
            <a href="/?category_id=${cat.id}" 
               class="list-group-item list-group-item-action ${currentCategory == cat.id ? 'active' : ''}">
              <i class="bi bi-tag me-2"></i>${cat.name}
            </a>
          `).join('')}
        </div>
      </div>

      <!-- 热门商品 -->
      ${hotProducts && hotProducts.length > 0 ? `
      <div class="card mt-4">
        <div class="card-header bg-white">
          <h5 class="mb-0"><i class="bi bi-fire text-danger me-2"></i>热门商品</h5>
        </div>
        <div class="list-group list-group-flush">
          ${hotProducts.map(p => `
            <a href="/product/${p.id}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
              <span class="text-truncate" style="max-width: 150px;">${p.name}</span>
              <span class="text-danger fw-bold">¥${parseFloat(p.price).toFixed(2)}</span>
            </a>
          `).join('')}
        </div>
      </div>
      ` : ''}
    </div>

    <!-- 商品列表 -->
    <div class="col-lg-9">
      ${keyword ? `
      <div class="alert alert-info mb-4">
        搜索 "<strong>${keyword}</strong>" 的结果，共 ${pagination.total} 个商品
        <a href="/" class="float-end">清除搜索</a>
      </div>
      ` : ''}

      ${products.length === 0 ? `
      <div class="text-center py-5">
        <i class="bi bi-inbox display-1 text-muted"></i>
        <h4 class="mt-3 text-muted">暂无商品</h4>
        <p class="text-muted">商品正在上架中，请稍后再来~</p>
      </div>
      ` : `
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        ${products.map(product => `
          <div class="col">
            <div class="card product-card h-100">
              <div class="position-relative">
                ${product.image ? `
                  <img src="${product.image}" class="card-img-top" alt="${product.name}">
                ` : `
                  <div class="card-img-top d-flex align-items-center justify-content-center bg-light">
                    <i class="bi bi-image display-4 text-muted"></i>
                  </div>
                `}
                <div class="position-absolute top-0 start-0 p-2">
                  ${product.is_hot ? '<span class="badge badge-hot me-1">热门</span>' : ''}
                  ${product.is_recommend ? '<span class="badge badge-recommend">推荐</span>' : ''}
                </div>
              </div>
              <div class="card-body">
                <h5 class="card-title text-truncate" title="${product.name}">${product.name}</h5>
                <p class="card-text text-muted small text-truncate">${product.description || '暂无描述'}</p>
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <span class="price">¥${parseFloat(product.price).toFixed(2)}</span>
                    ${product.original_price ? `
                      <span class="original-price ms-2">¥${parseFloat(product.original_price).toFixed(2)}</span>
                    ` : ''}
                  </div>
                  <span class="badge ${product.stock_count > 0 ? 'bg-success' : 'bg-secondary'} stock-badge">
                    库存: ${product.stock_count}
                  </span>
                </div>
              </div>
              <div class="card-footer bg-white border-0">
                <a href="/product/${product.id}" class="btn btn-primary w-100">
                  ${product.stock_count > 0 ? '立即购买' : '暂时缺货'}
                </a>
              </div>
            </div>
          </div>
        `).join('')}
      </div>

      <!-- 分页 -->
      ${pagination.totalPages > 1 ? `
      <nav class="mt-4">
        <ul class="pagination justify-content-center">
          ${pagination.hasPrev ? `
            <li class="page-item">
              <a class="page-link" href="?page=${pagination.page - 1}${currentCategory ? '&category_id=' + currentCategory : ''}${keyword ? '&keyword=' + keyword : ''}">上一页</a>
            </li>
          ` : ''}
          ${Array.from({length: Math.min(5, pagination.totalPages)}, (_, i) => {
            let pageNum;
            if (pagination.totalPages <= 5) {
              pageNum = i + 1;
            } else if (pagination.page <= 3) {
              pageNum = i + 1;
            } else if (pagination.page >= pagination.totalPages - 2) {
              pageNum = pagination.totalPages - 4 + i;
            } else {
              pageNum = pagination.page - 2 + i;
            }
            return `
              <li class="page-item ${pageNum === pagination.page ? 'active' : ''}">
                <a class="page-link" href="?page=${pageNum}${currentCategory ? '&category_id=' + currentCategory : ''}${keyword ? '&keyword=' + keyword : ''}">${pageNum}</a>
              </li>
            `;
          }).join('')}
          ${pagination.hasNext ? `
            <li class="page-item">
              <a class="page-link" href="?page=${pagination.page + 1}${currentCategory ? '&category_id=' + currentCategory : ''}${keyword ? '&keyword=' + keyword : ''}">下一页</a>
            </li>
          ` : ''}
        </ul>
      </nav>
      ` : ''}
      `}
    </div>
  </div>
</div>

` }) %>
