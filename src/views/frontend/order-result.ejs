<%- include('../layouts/main', { body: `

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      ${type === 'success' ? `
      <div class="text-center mb-4">
        <div class="d-inline-flex align-items-center justify-content-center bg-success text-white rounded-circle" style="width: 100px; height: 100px;">
          <i class="bi bi-check-lg" style="font-size: 3rem;"></i>
        </div>
      </div>
      <h2 class="text-center mb-3">支付成功</h2>
      <p class="text-center text-muted mb-4">您的订单已支付成功，系统正在处理发货</p>
      ` : type === 'cancel' ? `
      <div class="text-center mb-4">
        <div class="d-inline-flex align-items-center justify-content-center bg-warning text-white rounded-circle" style="width: 100px; height: 100px;">
          <i class="bi bi-exclamation-triangle" style="font-size: 3rem;"></i>
        </div>
      </div>
      <h2 class="text-center mb-3">支付已取消</h2>
      <p class="text-center text-muted mb-4">您已取消本次支付，订单仍在等待支付</p>
      ` : `
      <div class="text-center mb-4">
        <div class="d-inline-flex align-items-center justify-content-center bg-danger text-white rounded-circle" style="width: 100px; height: 100px;">
          <i class="bi bi-x-lg" style="font-size: 3rem;"></i>
        </div>
      </div>
      <h2 class="text-center mb-3">支付失败</h2>
      <p class="text-center text-muted mb-4">支付过程中出现问题，请重试或联系客服</p>
      `}

      ${order ? `
      <div class="card mb-4">
        <div class="card-body">
          <table class="table table-borderless mb-0">
            <tr>
              <td class="text-muted" width="100">订单号</td>
              <td><code>${order.order_no}</code></td>
            </tr>
            <tr>
              <td class="text-muted">商品名称</td>
              <td>${order.product_name}</td>
            </tr>
            <tr>
              <td class="text-muted">购买数量</td>
              <td>${order.quantity} 件</td>
            </tr>
            <tr>
              <td class="text-muted">订单金额</td>
              <td class="text-danger fw-bold">¥${parseFloat(order.total_amount).toFixed(2)}</td>
            </tr>
          </table>
        </div>
      </div>

      <div class="d-grid gap-2">
        <a href="/order/${order.order_no}" class="btn btn-primary btn-lg">
          <i class="bi bi-eye me-2"></i>查看订单详情
        </a>
        <a href="/" class="btn btn-outline-secondary">
          <i class="bi bi-house me-2"></i>返回首页
        </a>
      </div>
      ` : `
      <div class="d-grid gap-2">
        <a href="/order/query" class="btn btn-primary btn-lg">
          <i class="bi bi-search me-2"></i>查询订单
        </a>
        <a href="/" class="btn btn-outline-secondary">
          <i class="bi bi-house me-2"></i>返回首页
        </a>
      </div>
      `}

      ${type === 'success' ? `
      <div class="alert alert-info mt-4">
        <i class="bi bi-info-circle me-2"></i>
        温馨提示：支付成功后系统会自动发货，请点击查看订单详情获取卡密信息。如有问题请联系客服。
      </div>
      ` : ''}
    </div>
  </div>
</div>

` }) %>
