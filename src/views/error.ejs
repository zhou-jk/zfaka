<%- include('../layouts/main', { body: `

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-6 text-center">
      <div class="mb-4">
        ${status === 404 ? `
          <i class="bi bi-search display-1 text-muted"></i>
        ` : status === 403 ? `
          <i class="bi bi-shield-x display-1 text-danger"></i>
        ` : status === 500 ? `
          <i class="bi bi-exclamation-triangle display-1 text-warning"></i>
        ` : `
          <i class="bi bi-emoji-frown display-1 text-muted"></i>
        `}
      </div>
      
      <h1 class="display-4 mb-3">${status || 'Error'}</h1>
      
      <p class="lead text-muted mb-4">
        ${message || (status === 404 ? '页面未找到' : status === 403 ? '无权访问' : status === 500 ? '服务器错误' : '发生了错误')}
      </p>

      ${status === 404 ? `
        <p class="text-muted mb-4">您访问的页面不存在或已被删除</p>
      ` : status === 403 ? `
        <p class="text-muted mb-4">您没有权限访问此页面</p>
      ` : status === 500 ? `
        <p class="text-muted mb-4">服务器遇到问题，请稍后重试</p>
      ` : `
        <p class="text-muted mb-4">请稍后重试或联系管理员</p>
      `}

      <div class="d-flex justify-content-center gap-3">
        <a href="/" class="btn btn-primary">
          <i class="bi bi-house me-2"></i>返回首页
        </a>
        <button onclick="history.back()" class="btn btn-outline-secondary">
          <i class="bi bi-arrow-left me-2"></i>返回上页
        </button>
      </div>

      ${process.env.NODE_ENV === 'development' && error ? `
        <div class="mt-5 text-start">
          <div class="card border-danger">
            <div class="card-header bg-danger text-white">
              <i class="bi bi-bug me-2"></i>开发模式 - 错误详情
            </div>
            <div class="card-body">
              <pre class="mb-0 small text-danger" style="white-space: pre-wrap;">${error.stack || error}</pre>
            </div>
          </div>
        </div>
      ` : ''}
    </div>
  </div>
</div>

` }) %>
